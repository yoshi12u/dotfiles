[init]
  templatedir = ~/.git_template
	defaultBranch = main
[push]
  default = current
[color]
  ui = auto
[pull]
  ff = only
[commit]
  template = ~/.gitmessage
[fetch]
  prune = true
[rebase]
  autosquash = true
[include]
  path = ~/.gitconfig.local
[merge]
    conflictstyle = diff3
[diff]
    colorMoved = default
